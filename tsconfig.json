{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react-native",
        "outDir": "lib",
        "rootDir": "src",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "declaration": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "exclude": [
        "index.android.js",
        "index.ios.js",
        "gulpfile.js",
        "lib",
        "config",
        "node_modules",
        "node_modules/@types/nodet"
    ]
}